
@{
    ViewBag.Title = "AddStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Telefon Rehberi</title>

    <link href="~/Content/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/Content/css/sb-admin.css" rel="stylesheet">

</head>

<body>
    
        <div id="wrapper">
            <div id="content-wrapper">
                <div class="container-fluid">
                    <div class="card mb-3">
                        <div class="card-header">Telefon Rehberi</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6 ">
                                    <form class="form-group" method="post">
                                        <input placeholder="Adını Giriniz" type="text" class="form-control" name="Name" pattern="[A-Za-z]*" />
                                        <br />
                                        <input placeholder="Soyadını Giriniz" type="text" class="form-control" name="Surname" pattern="[A-Za-z]*" />
                                        <br />
                                        <input type="tel" class="form-control" placeholder="Telefon Numarasını Giriniz (5*********) " name="Telephone" pattern="[0-9]{10}" />
                                        <br />
                                        <input placeholder="Departmanı Giriniz" type="text" class="form-control" name="Department" pattern="[A-Za-z]*" />
                                        <br />
                                        <input placeholder="Yönetici Bilgisini Giriniz" type="text" class="form-control" name="Manager" pattern="[A-Za-z]*" />
                                        <br />
                                        <button class="btn btn-info">Kaydet</button>
                                        </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <script src="~/Content/Scripts/jquery.min.js"></script>
    <script src="~/Content/Scripts//bootstrap.bundle.min.js"></script>
    <script src="~/Content/Scripts/jquery.easing.min.js"></script>
    <script src="~/Content/Scripts/jquery.dataTables.js"></script>
    <script src="~/Content/Scripts/dataTables.bootstrap4.js"></script>
    <script src="~/Content/Scripts/sb-admin.min.js"></script>
    <script src="~/Content/Scripts/datatables-demo.js"></script>

</body>

</html>

